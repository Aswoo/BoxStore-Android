<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/new_goods_1"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:srcCompat="@drawable/nana_image"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/new_goods_2"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:srcCompat="@drawable/ic_nhn_food"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/new_goods_1"
        app:layout_constraintRight_toLeftOf="@+id/new_goods_3"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/new_goods_3"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:srcCompat="@drawable/nana_image"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_new_goods_1"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/new_goods_1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_new_goods_2"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/new_goods_2"
        app:layout_constraintRight_toLeftOf="@+id/tv_new_goods_3"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_new_goods_1"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tv_new_goods_3"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/new_goods_3"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_new_goods_1_price"
        android:layout_width="47dp"
        android:layout_height="14dp"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_goods_1"
        android:layout_marginLeft="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_new_goods_2_price"
        android:layout_width="47dp"
        android:layout_height="14dp"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/tv_new_goods_3_price"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_new_goods_1_price"
        android:layout_marginLeft="44dp"
        app:layout_constraintHorizontal_bias="0.326"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_goods_2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:background="@color/gray_700"
        android:textSize="14dp"
        android:id="@+id/tv_new_goods_3_price"
        android:layout_width="47dp"
        android:layout_height="14dp"
        android:text="8000원"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_goods_3"
        android:layout_marginRight="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>